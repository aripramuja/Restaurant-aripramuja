{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "eqeqeq": "off",
    "curly": "error",
    "quotes": ["error", "double"],
    "overrides": [
      {
        "files": ["*-test.js", "*.spec.js"],
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ],
    "noInlineConfig": true
  }
}
